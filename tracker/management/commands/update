#/bin/sh
# Called by git-receive-pack with arguments: refname sha1-old sha1-new

#link this file to your git hook update file 
# and chmod +x update

# --- Command line
refname="$1"
oldrev="$2"
newrev="$3"

# --- Safety check
if [ -z "$GIT_DIR" ]; then
        echo "Don't run this script from the command line." >&2
        echo " (if you want, you could supply GIT_DIR then run" >&2
        echo "  $0 <ref> <oldrev> <newrev>)" >&2
        exit 1
fi

project_path="/Users/kamil/Desktop/PROJECTOS/viajestigaiga"

python_path=$project_path/env/bin/python
comm="$project_path/vijestigaiga/manage.py close-ticket"

$python_path $comm $refname $oldrev $newrev